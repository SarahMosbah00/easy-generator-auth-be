{
  "$schema": "https://json.schemastore.org/tsconfig",
  
  "compilerOptions": {
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "module": "commonjs",
      "moduleResolution": "node"
  },
  "watchOptions": {
      "watchFile": "fixedPollingInterval"
  }
}
